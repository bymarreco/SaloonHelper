@model SaloonHelper.Models.Product

@{
    ViewData["Title"] = "Calculate Product Price";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="home" asp-action="CalculateProduct" method="post">
    <div class="form-group row">
        <label asp-for="InitialPrice" class="col-sm-auto col-form-label">Valor Inicial: </label>
        <div class="col-md-auto">
            <input type="text" asp-for="InitialPrice" class="form-control" placeholder="Informe o valor Inicial:" />
            <span asp-validation-for="InitialPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Increase" class="col-sm-auto col-form-label">Valor Aumento: </label>
        <div class="col-md-auto">
            <input type="text" asp-for="Increase" class="form-control" placeholder="Informe o valor de Aumento:" />
            <span asp-validation-for="Increase" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" asp-action="CalculateProduct" formmethod="post">Calculate</button>
        </div>
    </div> 
</form>
