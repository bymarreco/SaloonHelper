@model SaloonHelper.Models.Service

@{
    ViewData["Title"] = "Calculate Product Price";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="home" asp-action="CalculateService" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ServicePrice">Precificação de Serviços</label>
            <input type="text" asp-for="ServicePrice" class="form-control" placeholder="Valor do Serviço">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Rateio">Rateio</label>
            <input type="text" asp-for="Rateio" class="form-control" placeholder="valor do Rateio em %">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="TaxaCartao">Taxa de Cartão</label>
            <input type="text" asp-for="TaxaCartao" class="form-control" placeholder="Taxa de Cartão">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="DescontoToalha">Desconto Toalha</label>
            <input type="text" asp-for="DescontoToalha" class="form-control" placeholder="Custo com Toalha">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="DescontoProdutos">Desconto de Produtos</label>
            <input type="text" asp-for="DescontoProdutos" class="form-control" placeholder="Custo com Cartão">
        </div>
    </div>
    <div class="form-row">
        <label>Descontar Taxas: &nbsp; </label>
        <div class="form-group">
            <div class="form-check form-check-inline">
                <input asp-for="DescontarTaxaAntes" class="form-check-input" type="radio" value=true>
                <label class="form-check-label">Descontar Taxa Antes</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="DescontarTaxaAntes" class="form-check-input" type="radio" value=false >
                <label class="form-check-label">Descontar Taxa Depois</label>
            </div>
        </div> 
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" asp-action="CalculateService" formmethod="post">Calculate</button>
        </div>
    </div> 
</form>